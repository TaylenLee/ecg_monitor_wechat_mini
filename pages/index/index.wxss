ec-canvas {
  width: 100%;
  height: 200px;
}

.container {
  /* 如果不需要在一个平面内显示，可以把position: absolute注释掉 */
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0; 

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
